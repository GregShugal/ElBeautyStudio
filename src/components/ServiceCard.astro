---
const { title, duration, priceFrom, href = '/book', tags = [] } = Astro.props;
---
<article class="card h-full flex flex-col">
  <div class="flex-1">
    <h3 class="font-display text-2xl">{title}</h3>
    <p class="mt-2 text-sm text-[var(--muted)]">{duration} Â· from {priceFrom}</p>
    <div class="mt-3 flex flex-wrap gap-2">
      {tags.map(t => <span class="chip" aria-label="tag">{t}</span>)}
    </div>
  </div>
  <a href={href} class="btn btn-primary mt-6 no-underline" aria-label={`Book ${title}`}>Book Now</a>
</article>
