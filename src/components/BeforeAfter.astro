---
const { beforeSrc = '/assets/results-before.svg', afterSrc = '/assets/results-after.svg', caption = '' } = Astro.props;
---
<div class="card">
  <div class="grid grid-cols-2 gap-2">
    <img
      src={beforeSrc}
      alt="Before"
      class="rounded-xl w-full h-full object-cover"
      loading="lazy"
      decoding="async"
      width="640"
      height="800"
    />
    <img
      src={afterSrc}
      alt="After"
      class="rounded-xl w-full h-full object-cover"
      loading="lazy"
      decoding="async"
      width="640"
      height="800"
    />
  </div>
  {caption && <p class="mt-3 text-sm text-[var(--muted)]">{caption}</p>}
</div>
