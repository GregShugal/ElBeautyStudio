---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import ServiceCard from '../components/ServiceCard.astro';
import ReviewMarquee from '../components/ReviewMarquee.astro';
import UGCGrid from '../components/UGCGrid.astro';
import SkinQuizIsland from '../components/SkinQuizIsland.jsx';
import KlaviyoForm from '../components/KlaviyoForm.astro'; // ← Klaviyo
import services from '../content/services.json';

// Page-local data
const reviews = [
  {author:'S.M.', text:'The best facial I have ever had. My skin glowed for days!'},
  {author:'A.R.', text:'Sculpting massage is unreal—instant lift and relaxation.'},
  {author:'J.K.', text:'Super clean studio, gentle hands, and real results.'},
];

const igItems = [
  {url:'https://www.instagram.com/p/REPLACE_1/'},
  {url:'https://www.instagram.com/p/REPLACE_2/'},
  {url:'https://www.instagram.com/p/REPLACE_3/'},
  {url:'https://www.instagram.com/p/REPLACE_4/'},
  {url:'https://www.instagram.com/p/REPLACE_5/'},
  {url:'https://www.instagram.com/p/REPLACE_6/'},
];
---

<BaseLayout
  title="EL Beauty Studio — East Hanover NJ"
  description="Bespoke facials, sculpting face massage, and lash lifts."
>
  <Hero
    title="Sculpted glow. Clinical care. Effortless elegance."
    subtitle="Bespoke facials & sculpting face massage in East Hanover, NJ."
  />

  <!-- Featured services -->
  <section class="py-12">
    <div class="max-w-6xl mx-auto px-6">
      <h2 class="font-display text-3xl mb-6">Featured services</h2>
      <div class="grid md:grid-cols-3 gap-6">
        {services.slice(0,3).map(s => <ServiceCard {...s} />)}
      </div>
    </div>
  </section>

  <!-- Quiz + Reviews -->
  <section class="py-12">
    <div class="max-w-6xl mx-auto px-6 grid md:grid-cols-2 gap-6 items-start">
      <SkinQuizIsland client:load />
      <ReviewMarquee reviews={reviews} />
    </div>
  </section>

  <!-- Email capture (Klaviyo) -->
  <section class="py-12">
    <div class="max-w-6xl mx-auto px-6">
      <KlaviyoForm />
    </div>
  </section>

  <!-- Instagram UGC -->
  <UGCGrid items={igItems} />
</BaseLayout>
