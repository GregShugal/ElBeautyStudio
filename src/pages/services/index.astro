---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ServiceCard from '../../components/ServiceCard.astro';
import services from '../../content/services.json';
---
<BaseLayout title="Services | EL Beauty Studio">
  <section class="py-12">
    <div class="max-w-6xl mx-auto px-6">
      <h1 class="font-display text-4xl mb-6">Services</h1>
      <p class="text-[var(--muted)] max-w-2xl">Personalized facials, sculpting massage, and lash lifts. Each visit is tailored to your skin today, with clear pre/postâ€‘care and realistic expectations.</p>
      <div class="card mt-8 flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div>
          <p class="text-sm uppercase tracking-[0.3em] text-[var(--muted)]">Featured</p>
          <h2 class="font-display text-2xl mt-2">Sculpting Face Massage + Lymphatic Drainage</h2>
          <p class="text-[var(--muted)] mt-2">Manual facelift energy for jaw tension, travel swelling, and special events. Learn exactly how we work before you book.</p>
        </div>
        <a href="/sculpting-face-massage" class="btn btn-primary no-underline md:self-start">Explore protocol</a>
      </div>
      <div class="grid md:grid-cols-3 gap-6 mt-8">
        {services.map(s => <ServiceCard {...s} />)}
      </div>
    </div>
  </section>
</BaseLayout>
