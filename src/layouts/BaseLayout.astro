---
import "../styles/tailwind.css";
import SEO from "../components/SEO.astro";

const {
  title = 'EL Beauty Studio — East Hanover NJ',
  description = 'Bespoke facials & sculpting face massage in East Hanover, NJ.',
  // You can override these per-page if needed:
  url = 'https://elbsnj.com',
  image = '/assets/og-elbsnj.jpg'
} = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Centralized SEO (titles, meta, Open Graph, JSON-LD) -->
    <SEO {title} {description} {url} {image} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@600;700&family=Inter:wght@400;500;600&display=swap"
      rel="stylesheet"
    >

    <!-- (Optional) Favicon -->
    <!-- <link rel="icon" href="/favicon.ico"> -->
  </head>
  <body class="min-h-screen flex flex-col">
    <header class="sticky top-0 z-50 bg-white/80 backdrop-blur border-b">
      <nav class="max-w-6xl mx-auto flex items-center justify-between p-4">
        <a href="/" class="no-underline text-xl font-display tracking-wide">EL Beauty Studio</a>
        <div class="hidden md:flex gap-6">
          <a href="/services" class="no-underline">Services</a>
          <a href="/results" class="no-underline">Results</a>
          <a href="/reviews" class="no-underline">Reviews</a>
          <a href="/about" class="no-underline">About</a>
          <a href="/blog" class="no-underline">Blog</a>
          <a href="/contact" class="no-underline">Contact</a>
        </div>
        <a href="/book" class="btn btn-primary no-underline">Book a Glow</a>
      </nav>
    </header>

    <main class="flex-1">
      <slot />
    </main>

    <footer class="mt-16 border-t">
      <div class="max-w-6xl mx-auto p-8 grid md:grid-cols-3 gap-8">
        <div>
          <h4 class="font-display text-lg mb-2">EL Beauty Studio</h4>
          <p class="text-[var(--muted)]">East Hanover, NJ · By appointment</p>
          <p class="mt-2 text-sm">Parking available · 5.0 ★ Google</p>
        </div>
        <div class="grid grid-cols-2 gap-2">
          <a href="/services">Services</a>
          <a href="/results">Results</a>
          <a href="/reviews">Reviews</a>
          <a href="/forms">Forms & Policies</a>
          <a href="/about">About</a>
          <a href="/contact">Contact</a>
        </div>
        <div class="space-y-3">
          <a class="btn btn-ghost w-full no-underline" href="/book">Book Now</a>
          <form action="#" class="flex gap-2">
            <input class="flex-1 rounded-full border px-4" placeholder="Email for skincare tips" />
            <button class="btn btn-primary" type="button">Join</button>
          </form>
        </div>
      </div>
      <div class="text-center text-xs py-4 text-[var(--muted)]">© {new Date().getFullYear()} EL Beauty Studio · elbsnj.com</div>
    </footer>

    <!-- Instagram oEmbed for v1 IG tiles -->
    <script async src="//www.instagram.com/embed.js"></script>
  </body>
</html>

